{
  "name": "rubyrep dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "runServices": ["pg", "mysql", "dev"],
  "workspaceFolder": "/workspaces/rubyrep",
  "forwardPorts": [5432, 3306],
  "containerEnv": {
    "PGHOST": "pg",
    "PGUSER": "rubyrep",
    "PGPASSWORD": "password",
    "MYSQL_HOST": "mysql",
    "MYSQL_USER": "rubyrep",
    "MYSQL_PASSWORD": "password",
    "MYSQL_PWD": "password"
  },
  "portsAttributes": {
    "5432": { "label": "PostgreSQL" },
    "3306": { "label": "MySQL" }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/rails/devcontainer/features/ruby:2": {
      "version": "2.7"
    },
    "ghcr.io/rails/devcontainer/features/postgres-client": {},
    "ghcr.io/rails/devcontainer/features/mysql-client": {},
    "docker-from-docker": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Shopify.ruby-lsp",
        "rebornix.Ruby",
        "EditorConfig.EditorConfig"
      ]
    }
  },
  "updateContentCommand": "gem list --silent -i -v 2.3.0 bundler || gem install bundler -v 2.3.0 ; bundle install ; true",
  "shutdownAction": "stopCompose",
  "remoteUser": "vscode"
}
